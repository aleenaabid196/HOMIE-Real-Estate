<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/profilePicImgView"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:rotation="0"
        android:scaleType="centerCrop"
        android:src="@drawable/abdur_1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:src="@drawable/rounded_rectangle4" />

    <RelativeLayout
        android:id="@+id/lmao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="25dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/profileNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="M. Abdurrehman"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/followBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/follow_icon"
            android:layout_alignBottom="@id/profileLocationText"/>

        <TextView
            android:id="@+id/profileLocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileNameText"
            android:layout_marginTop="10dp"
            android:text="Member since January 2023"
            android:textSize="17sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileLocationText"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:id="@+id/recyclerViewProfileAd">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_below="@+id/recyclerViewProfileAd"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#F1F1F1"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp">

            <ImageView
                android:id="@+id/callProfileIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/call_profile_icon" />

            <TextView
                android:id="@+id/callText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/callProfileIcon"
                android:fontFamily="@font/alata"
                android:text="Call"
                android:textColor="@color/dark_green"
                android:textSize="20sp" />

        </RelativeLayout>


        </androidx.cardview.widget.CardView>

<!--        <ImageView-->
<!--            android:id="@+id/questionBar"-->
