<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAdActivity1">



<!--    <androidx.viewpager.widget.ViewPager-->
<!--        android:id="@+id/adImgViewPager"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="350dp"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:background="@drawable/house4" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSLider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:iss_period="1000"
            app:iss_auto_cycle="true"
            app:iss_delay="1000"
            app:iss_corner_radius="10"
            app:iss_title_background="@drawable/house3"/>


    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:src="@drawable/rounded_rectangle4" />

    <RelativeLayout


        android:id="@+id/lmao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="00dp">


        <ImageView
            android:id="@+id/fvrtImgView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:src="@drawable/favorite_outline" />

        <TextView
            android:id="@+id/adTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/alata"
            android:text="House for sale in Lahore"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileLocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:text="Lahore, Pakistan"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="-8dp"
            android:paddingTop="7dp"
            android:src="@drawable/location_icon" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/adTitleText"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#F1F1F1"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="5dp">

                <ImageView
                    android:id="@+id/bedroomIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/bedroom_icon" />

                <TextView
                    android:id="@+id/bedroomText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/bedroomIcon"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="2"
                    android:textColor="@color/dark_green"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/bathroomIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/bedroomText"
                    android:paddingBottom="0dp"
                    android:src="@drawable/bathroom_icon" />

                <TextView
                    android:id="@+id/bathroomText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/bathroomIcon"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="2"
                    android:textColor="@color/dark_green"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/floorIcon"
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/bathroomText"
                    android:paddingBottom="2dp"
                    android:src="@drawable/floors_icon" />

                <TextView
                    android:id="@+id/floorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/floorIcon"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="2"
                    android:textColor="@color/dark_green"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/areaUnitIcon"
                    android:layout_width="38dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/floorText"
                    android:src="@drawable/area_icon" />

                <TextView
                    android:id="@+id/areaUnitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/areaUnitIcon"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="20"

                    android:textColor="@color/dark_green"
                    android:textSize="23sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="155dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="#F1F1F1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="0dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/lmao2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="8dp"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="19dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/pfpView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/abdur_1"

                                tools:ignore="ContentDescription" />


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/nameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@id/lmao2"
                            android:fontFamily="@font/alata"
                            android:text="Aleena Abid"
                            android:textColor="#302F2F"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="27dp"
                            android:layout_toRightOf="@id/lmao2"
                            android:fontFamily="@font/alegreya_sans_sc_bold"
                            android:text="OWNER"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/descriptionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="55dp"
                            android:justificationMode="inter_word"
                            android:maxLines="6"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="#F1F1F1"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="0dp">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="FragmentTagUsage" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>


        <TextView
            android:id="@+id/priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="33dp"
            android:fontFamily="@font/dm_serif_display"
            android:text="PKR 100,000,000"

            android:textSize="15sp"
            android:textStyle="bold" />

        <ng.max.slideview.SlideView
            android:id="@+id/slideBtn"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="25dp"
            android:elevation="0.5dp"
            app:sv_animateSlideText="true"
            app:sv_buttonBackgroundColor="#FFFFFF"
            app:sv_buttonImage="@drawable/call_icon"
            app:sv_buttonImageDisabled="@drawable/favorite_filled"
            app:sv_reverseSlide="false"
            app:sv_slideBackgroundColor="#563ACEFB"
            app:sv_slideText="Contact Seller    "
            app:sv_slideTextColor="#5A5656"
            app:sv_slideTextSize="12sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/tourBtn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Get a Tour"
        android:paddingHorizontal="5dp"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"/>



</RelativeLayout>